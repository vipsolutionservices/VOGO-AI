{
  "name": "vogo-chatbot-phase-b",
  "version": "2.0.0",
  "description": "Vogo Chatbot - Phase B Demo (Database-Powered)",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "test": "node test_db.js",
    "dev": "nodemon server/server.js",
    "db:install": "mysql -u root -p < database/schema.sql",
    "db:reset": "mysql -u root -p -e 'DROP DATABASE IF EXISTS vogo_chatbot;' && npm run db:install"
  },
  "keywords": [
    "chatbot",
    "nlp",
    "mysql",
    "nodejs",
    "express"
  ],
  "author": "Vogo Team",
  "license": "Proprietary",
  "dependencies": {
    "compromise": "^14.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mysql2": "^3.16.3",
    "node-fetch": "^2.7.0",
    "node-nlp": "^4.27.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
